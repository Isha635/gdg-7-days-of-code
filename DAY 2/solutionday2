#include<iostream>                       //including header file
using namespace std;

void pyramid(int n)                         //creating a function in order to print the pyramid
{
	for(int i=1;i<=n;i++)        //first for loop
	{
		int stars=2*i-1;
		int space=n-i;
		
		for(int j=0;j<space;j++)    //second for loop inside the  for loop in order to calculate the space
		
		{
		cout<<" ";
		}
	
		for(int k=0;k<stars;k++) //third for loop inside the firts for loop in order to caluclate the no.of stars to be printed
		{
			cout<<"*";
		}
		cout<<endl;   //ending the line
	
			
	}
}
int main()                  //starting with main function
{
	int n;          //integer n
	cout<<"Enter N:";              //taking input from user
	cin>>n;
    pyramid(n);              //calling the function
	return 0;

}
